{
  "name": "playwright_demo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "bddgen && playwright test",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:debug": "bddgen && playwright test --debug",
    "test:ui": "bddgen && playwright test --ui",
    "test:headless": "bddgen && playwright test --headed",
    "test:trace": "bddgen && playwright test --trace on",
    "test:report": "bddgen && playwright show-report",
    "test:byTag": "bddgen && playwright test --grep @smoke",
    "test:byTag:invert": "bddgen && playwright test --grep-invert @smoke",
    "test:chrome": "bddgen && playwright test --project=chromium",
    "test:firefox": "bddgen && playwright test --project=firefox",
    "test:webkit": "bddgen && playwright test --project=webkit",
    "test:all": "bddgen && playwright test --project=chromium,firefox,webkit",
    "test:specific": "bddgen && playwright test tests/searchProduct.spec.js",
    "test:report:open": "bddgen && playwright show-report --open",
    "test:allure": "bddgen && playwright test --reporter=line,allure-playwright",
    "allure:generate": "bddgen && allure generate allure-results --clean -o allure-report",
    "allure:open": "bddgen && allure open allure-report",
    "allure:serve": "bddgen && allure serve allure-results"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.53.2",
    "@types/node": "^24.0.10",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.5.1",
    "playwright-bdd": "^8.3.1",
    "playwright-cucumber": "^1.0.15",
    "prettier": "^3.6.2",
    "prettier-plugin-gherkin": "^3.1.2"
  }
}
